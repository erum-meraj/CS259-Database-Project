    <title>IIT Patna</title>
    <!-- Bootstrap CSS (latest version) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/stylesheets/bootstrap-datepicker.css"
    />
    <script type="text/javascript" src="/stylesheets/jquery.js"></script>
    <script type="text/javascript" src="/stylesheets/bootstrap.js"></script>
    <script
      type="text/javascript"
      src="/stylesheets/bootstrap-datepicker.js"
    ></script>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="/stylesheets/style.css" rel="stylesheet" />
    <style>
      html,
      body {
        background-color: #7aa2e3;
      }

      .content-container {
        /* display:flex; */
        padding-top: 50px;
      }

      .submit {
        margin-right: 10px; /* Adjusted margin for shifting the button to the right */
      }

      .well {
        width: 66%;
        margin: 0 17%;
        font-size: 13px;
        background-color: #fff;
      }

      /* Additional styling */
      .mb-3 {
        margin-bottom: 20px;
      }

      .panel-heading {
        background-color: #dddddd;
        color: white;
        padding: 10px;
        margin-bottom: 20px;
      }

      .panel-body {
        background-color: white;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
      }

      .row {
        margin-left: 0;
        margin-right: 0;
      }
      .address-heading {
        font-size: 1.2em;
        font-family: "Oswald", sans-serif !important;
        text-align: left !important;
        padding: 0px 10px 0px 0px !important;
        font-family: "Noto Serif", serif;
        font-weight: bold;
        color: #414002;
      }
      .permanentAddress1 {
        font-size: 15px;
      }
      .permanentAddress2 {
        font-size: 15px;
      }
      .permanentAddress3 {
        font-size: 15px;
      }
      .permanentAddress4 {
        font-size: 15px;
      }
      .permanentAddress5 {
        font-size: 15px;
      }
    </style>

    <script src="js/script.js" defer></script>
    <link rel="stylesheet" href="/stylesheets/login.css" />
  </head>
  <body>
    <nav class="navbar bg-body-tertiary">
      <div
        class="container-fluid d-flex justify-content-center align-items-center"
      >
        <span class="navbar-brand mb-4 h1 form-name"
          >Application for Faculty Position</span
        >
      </div>
    </nav>

    <div class="row mt-5">
      <div class="col-md-3">&nbsp;</div>
      <div class="col-md-12">
        <% if(session.first_name) { %>

        <!-- <h1>Hi, Welcome</h1> -->
        <div class="col-xs-12 col-sm-12 col-md-12 well">
          <form
            class="form-horizontal"
            action="page2"
            method="post"
            enctype="multipart/form-data"
          >
            <legend>
              <div class="row">
                <div class="col-md-8">
                  <h4 class="Welcome">
                    Welcome :
                    <font color="#025198"
                      ><strong> <%= session.first_name %></strong></font
                    >
                  </h4>
                </div>

                <div class="col-md-3">
                  <a
                    href="#"
                    class="btn btn-lg btn-info pull-right btn-light"
                    onclick="get_username('Ma&nbsp;Agarwal', 711)"
                    data-target="#passModal"
                    data-toggle="modal"
                    >Change Password</a
                  >
                </div>
                <div class="col-md-1">
                  <a
                    href="/"
                    class="btn btn-lg btn-success pull-right btn-light"
                    >Logout</a
                  >
                </div>
              </div>
            </legend>
            <div class="row">
              <div class="col-md-12">
                <div class="row">
                  <div class="panel-body">
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label
                          for="advertisementNumber"
                          class="form-label address-heading"
                          >Advertisement Number*</label
                        >
                        <select
                          class="form-select"
                          id="advertisementNumber"
                          required
                        >
                          <option selected>Select</option>
                          <option>Blank</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label
                          for="applicationNumber"
                          class="form-label address-heading"
                          >Application Number*</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="applicationNumber"
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="departmentSchool"
                          class="form-label address-heading"
                          >Department/School</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="departmentSchool"
                        />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label
                          for="dateOfApplication"
                          class="form-label address-heading"
                          >Date of Application</label
                        >
                        <input
                          type="date"
                          class="form-control"
                          id="dateOfApplication"
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="postAppliedFor"
                          class="form-label address-heading"
                          >Post Applied for:*</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="postAppliedFor"
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Personal Details -->
            <div class="row">
              <div class="col-md-12">
                <div class="panel">
                  <div class="panel-heading">
                    1.Personal Details
                    <small class="pull-right"> Upload/Upload-Photo </small>
                  </div>
                  <div class="panel-body">
                    <div class="col-md-10">
                      <div class="row col-md-5">
                        <div class="mb-3">
                          <label
                            for="firstName"
                            class="form-label address-heading"
                            >First Name *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="firstName"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="lastName"
                            class="form-label address-heading"
                            >Last Name *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="lastName"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="dateOfBirth"
                            class="form-label address-heading"
                            >Date of Birth DD/MM/YYYY *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="dateOfBirth"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="maritalStatus"
                            class="form-label address-heading"
                            >Marital Status *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="maritalStatus"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="idProof"
                            class="form-label address-heading"
                            >ID Proof *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="idProof"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="fatherName"
                            class="form-label address-heading"
                            >Father's Name *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="fatherName"
                          />
                        </div>
                      </div>

                      <div class="row col-md-5">
                        <div class="mb-3">
                          <label
                            for="middleName"
                            class="form-label address-heading"
                            >Middle Name</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="middleName"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="nationality"
                            class="form-label address-heading"
                            >Nationality *</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="nationality"
                          />
                        </div>
                        <div class="mb-3">
                          <label for="gender" class="form-label address-heading"
                            >Gender *</label
                          >
                          <input type="text" class="form-control" id="gender" />
                        </div>
                        <div class="mb-3">
                          <label
                            for="category"
                            class="form-label address-heading"
                            >Category</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="category"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="updateIdProof"
                            class="form-label address-heading"
                            >Update ID Proof</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="updateIdProof"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="col-md-2 pull-right">
                      <img
                        src="https://ofa.iiti.ac.in/facrec_che_2023_july_02/attach/711_Ma_Agarwal_1698348165/711_1712509741119618.png"
                        class="thumbnail pull-right"
                        height="150"
                        width="130"
                      />
                      <input
                        id="photo"
                        name="userfile"
                        type="file"
                        class="form-control input-md"
                      />
                      <!-- Empty column for spacing -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- End Personal Details -->

            <!-- Address Details -->
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-success">
                  <div class="panel-body">
                    <div class="row">
                      <div class="col-md-6">
                        <span class="control-label address-heading" for="cadd"
                          >Correspondence Address
                        </span>
                        <br />
                        <br />
                        <div class="mb-3">
                          <label
                            for="correspondingAddress1"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="correspondingAddress1"
                            placeholder="State"
                          />
                        </div>

                        <div class="mb-3">
                          <label
                            for="correspondingAddress2"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="correspondingAddress2"
                            placeholder="City"
                          />
                        </div>

                        <div class="mb-3">
                          <label
                            for="correspondingAddress3"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="correspondingAddress3"
                            placeholder="Place"
                          />
                        </div>

                        <div class="mb-3">
                          <label
                            for="correspondingAddress4"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="correspondingAddress4"
                            placeholder="Country"
                          />
                        </div>

                        <div class="mb-3">
                          <label
                            for="correspondingAddress5"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="correspondingAddress5"
                            placeholder="PIN"
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <span class="control-label address-heading" for="padd"
                          >Permanent Address
                        </span>
                        <br />
                        <br />
                        <div class="mb-3">
                          <label
                            for="permanentAddress1"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="permanentAddress1"
                            placeholder="State"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="permanentAddress2"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="permanentAddress2"
                            placeholder="City"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="permanentAddress3"
                            class="form-label"
                          ></label>
                          <input
                            type="text"
                            class="form-control"
                            id="permanentAddress3"
                            placeholder="Place"
                          />
                        </div>
                        <div class="mb-3">
                          <label
                            for="permanentAddress4"
